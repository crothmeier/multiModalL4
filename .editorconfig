# EditorConfig is awesome: https://EditorConfig.org
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_size = 4

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Makefiles require tabs
[Makefile]
indent_style = tab

# Markdown - preserve trailing whitespace for line breaks
[*.md]
trim_trailing_whitespace = false

# Docker files
[Dockerfile*]
indent_size = 2

# TOML files
[*.toml]
indent_size = 2

# Go files
[*.go]
indent_style = tab
indent_size = 4
